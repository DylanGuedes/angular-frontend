{
  "parser": "babel-eslint",
  root: true,
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    consistent-return: 0,
    no-console: 0,
    comma-dangle: 0,
    no-underscore-dangle: 0,
    linebreak-style: 0,
    "valid-jsdoc": ["error", {
      "requireReturn": true,
      "requireReturnType": true,
      "requireParamDescription": true,
      "requireReturnDescription": true
    }],
    "require-jsdoc": ["error", {
        "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
        }
    }]
  }
}
